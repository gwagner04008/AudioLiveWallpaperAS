<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.livewallpaper.audio"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="20"
        android:targetSdkVersion="28" />

    <uses-feature android:name="android.software.live_wallpaper" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true" >
        <service
            android:name="com.livewallpaper.audio.AudioLiveWallpaperActivity"
            android:label="@string/wallpaper_name"
            android:permission="android.permission.BIND_WALLPAPER" >
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/audiolivewallpaper" />
        </service>

        <activity
            android:name="com.livewallpaper.audio.PrefsActivity"
            android:description="@string/description"
            android:exported="true"
            android:label="My Settings"
            android:theme="@android:style/Theme.Black" >

            <!-- android:theme="@android:style/Theme.WallpaperSettings" -->
        </activity>

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.livewallpaper.audio.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>